    "target": "es2016",
    "module": "commonjs",
    "rootDirs": ["."],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../build",
    "typeRoots": ["@types/"]
  },
  "include": ["./*"]
}
